<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpotifyWrapped"
        tools:targetApi="31">
        <activity
            android:name=".ViewPastSummaries"
            android:exported="false"
            android:label="@string/title_activity_view_past_summaries"
            android:theme="@style/Theme.SpotifyWrapped" />
        <activity
            android:name=".SignOnActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="auth"
                    android:scheme="com.example.spotifywrapped" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Adjust these to match your Redirect URI -->
                <data
                    android:host="auth"
                    android:scheme="com.example.spotifywrapped" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".WrappedSongs" />
        <activity android:name=".WrappedArtists" />
        <activity android:name=".WrappedAcousticness" />
        <activity android:name=".WrappedEnergy" />
        <activity android:name=".WrappedLoudness" />
        <activity android:name=".WrappedDanceability" />
        <activity android:name=".WrappedInstrumentalness" />
        <activity android:name=".WrappedMode" />
        <activity android:name=".WrappedSummary" />
    </application>

</manifest>