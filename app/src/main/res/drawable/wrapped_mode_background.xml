<!-- res/drawable/dark_blue_shapes.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0D47A1"
                android:endColor="#F13333"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Circles -->
    <item
        android:left="50dp"
        android:top="150dp">
        <shape android:shape="oval">
            <solid android:color="#1A237E"/>
        </shape>
    </item>
    <item
        android:right="150dp"
        android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#283593"/>
        </shape>
    </item>
    <item
        android:right="100dp"
        android:bottom="100dp">
        <shape android:shape="oval">
            <solid android:color="#3F51B5"/>
        </shape>
    </item>

    <!-- Rectangles -->
    <item
        android:left="150dp"
        android:top="100dp"
        android:right="250dp">
        <shape android:shape="rectangle">
            <solid android:color="#590426"/>
        </shape>
    </item>
    <item
        android:left="100dp"
        android:top="150dp"
        android:right="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#283593"/>
        </shape>
    </item>
    <item
        android:left="200dp"
        android:top="200dp"
        android:right="300dp">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/>
        </shape>
    </item>

    <!-- Lines -->
    <item
        android:left="50dp"
        android:top="200dp">
        <shape android:shape="line">
            <stroke
                android:width="4dp"
                android:color="#FF3D0243"/>
        </shape>
    </item>
    <item
        android:left="200dp"
        android:top="250dp">
        <shape android:shape="line">
            <stroke
                android:width="4dp"
                android:color="#FF3D0243"/>
        </shape>
    </item>
    <item
        android:left="100dp"
        android:top="300dp">
        <shape android:shape="line">
            <stroke
                android:width="4dp"
                android:color="#3D0243"/>
        </shape>
    </item>
</layer-list>
